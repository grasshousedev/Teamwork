{
	"manifest_version": 2,
	"name": "WorkPlay Pomodoro",
	"version": "0.1",
	"icons": {
		"16": "images/workPlay16.png",
		"48": "images/workPlay.png",
		"128": "images/workPlay.png"
	},
	"browser_action": {
		"default_title": "WorkPlay Pomodoro",
		"default_popup": "views/popup.html"
	}, 
	"background": {
		"persistent": false,
		"scripts": [
			"src/js/helpers.js", 
			"spec/mocks.js",
			"src/js/Task.js",
			"src/js/SettingsRepository.js",
			"src/js/SettingsService.js", 
			"src/js/TaskRepository.js", 
			"src/js/TaskService.js", 
			"src/js/PomodoroTimer.js",
			"src/js/background.js"
		]
	},
	"permissions": [
		"storage"
	]

}